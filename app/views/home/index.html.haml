.homepage.row
  .col-md-12
    - if member_signed_in?
      - content_for :title, t('.welcome', site_name: ENV['GROWSTUFF_SITE_NAME'], member_name: current_member)

      = render 'stats'
    - else
      .hidden-xs
        .jumbotron
          = render 'blurb'
      .visible-xs
        = render 'blurb'

    .row
      .col-lg-8.col-md-6.col-sm-12
        = render 'crops'
      .col-lg-2.col-md-3.col-sm-6
        = render 'plantings'
      .col-lg-2.col-md-3.col-sm-6
        = render 'harvests'
      .col-md-12
        - cache cache_key_for(Crop, 'recent') do
          %p{ style: 'margin-top: 11.25px' }
            %strong
              #{t('.recently_added')}:
            != Crop.recent.limit(30).map { |c| link_to(c, c) }.join(", ")

    %p.text-right
      = link_to "#{t('home.crops.view_all')} Â»", crops_path
    .row
      .col-md-12
        = render 'seeds'
        = render 'members'
    .row
      .col-md-12
        = render 'discuss'
